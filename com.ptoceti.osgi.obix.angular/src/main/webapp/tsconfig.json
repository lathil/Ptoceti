{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "typeRoots" : ["./node_modules/@types"],
    "types" : ["node"],
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "declaration": false
  },
  "exclude": [
    "node_modules"
  ]
}
